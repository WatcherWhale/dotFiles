# Window keybinds

mode "quicklaunch" {

    #bindsym $mod+d exec --no-startup-id i3-dmenu-desktop --dmenu="dmenu -h 30 -y 27 -l 10 -i -p Application: "
    bindsym $mod+d exec --no-startup-id rofi -show drun; mode "default"
    bindsym f exec firefox; mode "default"
    bindsym c exec st ~/.scripts/calendar; mode "default"
    bindsym d exec --no-startup-id discord; mode "default"
    bindsym t exec --no-startup-id telegram-desktop; mode "default"
    bindsym s exec --no-startup-id spotify-tray -t; mode "default"
    bindsym r exec --no-startup-id $term "ranger"; mode "default"
    bindsym e exec --no-startup-id $term "ranger"; mode "default"
    bindsym g exec gitkraken; mode "default"
    bindsym w exec whatsapp-nativefier; mode "default"
    bindsym o exec libreoffice; mode "default"
    bindsym n exec --no-startup-id $term "joplin"; mode "default"
    bindsym Shift+n exec "joplin-desktop"; mode "default"
    bindsym x exec xournalpp; mode "default"

    bindsym $mod+Return exec --no-startup-id $term; mode "default"

    bindsym $mod+a mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+a mode "quicklaunch"

