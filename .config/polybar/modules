[module/spacer]
type = custom/text
content = " "
label-margin = 0
padding = 0

[module/nordvpn]
type = custom/script
exec= ~/.scripts/nordvpn.sh
interval = 10
label-underline = ${colors.nord0}
label-overline = ${colors.nord0}
label = %output%
label-background = ${colors.nord1}
label-padding = 3
click-left = i3-msg exec ~/.scripts/vpn t

[module/bluenord]
type = custom/script
exec = ~/.scripts/bluetooth-status
interval = 1
click-left = rofi-bluetooth &
label-underline = ${colors.nord0}
label-overline = ${colors.nord0}
label = %output%
label-background = ${colors.nord1}
label-padding = 2

[module/dspeed]
type = custom/script
exec = ~/.scripts/downloadspeed
interval = 600
